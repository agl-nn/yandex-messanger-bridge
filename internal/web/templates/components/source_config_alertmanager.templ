package components

templ SourceConfigAlertmanager(config map[string]interface{}) {
    <div class="space-y-4 border-l-2 border-red-200 pl-4">
        <h4 class="font-medium text-sm text-gray-700">Настройки Alertmanager</h4>

        <!-- Минимальный severity -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Минимальный уровень severity
            </label>
            <select name="source_config[min_severity]" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="">Все</option>
                <option value="critical" { if config["min_severity"] == "critical" { selected } }>Critical</option>
                <option value="warning" { if config["min_severity"] == "warning" { selected } }>Warning</option>
                <option value="info" { if config["min_severity"] == "info" { selected } }>Info</option>
            </select>
        </div>

        <!-- Фильтр по меткам -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Фильтр по меткам
            </label>
            <textarea name="source_config[label_filters]" rows="2"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md font-mono text-sm">{ if config["label_filters"] != nil { config["label_filters"].(string) } }</textarea>
            <p class="text-xs text-gray-500">JSON вида {"severity": "critical", "job": "kubernetes"}</p>
        </div>

        <!-- Resolved алерты -->
        <div>
            <label class="flex items-center">
                <input type="checkbox"
                       name="source_config[send_resolved]"
                       value="true"
                       { if config["send_resolved"] == true { checked } }>
                <span class="ml-2 text-sm">Отправлять resolved-алерты</span>
            </label>
        </div>

        <!-- Группировка -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Группировка алертов
            </label>
            <select name="source_config[group_mode]" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option value="single" { if config["group_mode"] == "single" { selected } }>Одно сообщение на алерт</option>
                <option value="group" { if config["group_mode"] == "group" { selected } }>Группировать по меткам</option>
            </select>
        </div>

        <!-- Шаблон -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Шаблон сообщения
            </label>
            <textarea name="source_config[template]" rows="4"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md font-mono text-sm">{ if config["template"] != nil { config["template"].(string) } }</textarea>
            <p class="text-xs text-gray-500 mt-1">
                Доступные переменные: {status}, {alerts_count}, {group_labels}, {severity}, {alertname}, {instance}, {description}
            </p>
        </div>
    </div>
}